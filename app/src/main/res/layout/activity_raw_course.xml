<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/blue"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/rawCourse"
    tools:context="team5.mavs.com.mavericksm.rawCourse">
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="CourseID"
        android:textColor="@color/white"
        android:id="@+id/tvCourseID"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/tvLocation" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textColor="@color/white"
        android:id="@+id/tvLocation"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/tvCourseName"
        android:layout_alignTop="@+id/tvTime" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="CourseName"
        android:id="@+id/tvCourseName"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/tvCourseID"
        android:layout_alignBottom="@+id/tvCourseID"
        android:layout_alignParentTop="true" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Time"
        android:id="@+id/tvTime"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/tvLocation" />
</RelativeLayout>
