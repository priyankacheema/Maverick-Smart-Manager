<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="team5.mavs.com.mavericksm.RawLayout">
    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Send By:"
        android:id="@+id/tvSenderName"
        android:layout_alignParentLeft="true"
        android:gravity="left"
        android:textStyle="bold"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Time:"
        android:id="@+id/tvDate1"
        android:gravity="left"
        android:textStyle="bold"
        android:layout_below="@+id/tvSender"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Event:"
        android:id="@+id/tvTitle1"
        android:gravity="left"
        android:textStyle="bold"
        android:layout_below="@+id/tvDate"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:textStyle="bold"
        android:id="@+id/tvBody1"
        android:gravity="left"
        android:layout_below="@+id/tvTitle"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sender"
        android:id="@+id/tvSender"
        android:gravity="left"
        android:layout_toEndOf="@+id/tvBody1"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tvDate" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time"
        android:id="@+id/tvDate"
        android:gravity="left"
        android:layout_toEndOf="@+id/tvSenderName"
        android:layout_alignTop="@+id/tvDate1"
        android:layout_alignStart="@+id/tvTitle" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:id="@+id/tvTitle"
        android:gravity="left"
        android:layout_below="@+id/tvDate"
        android:layout_toEndOf="@+id/tvBody1" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Body"
        android:id="@+id/tvBody"
        android:gravity="left"
        android:layout_below="@+id/tvTitle"
        android:layout_toEndOf="@+id/tvBody1" />
</RelativeLayout>
